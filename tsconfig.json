{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",  
    "rootDir": "./src", 
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,

  },
  "include": ["src/**/*", "src/middlewares/errorHandler.ts"]
}
